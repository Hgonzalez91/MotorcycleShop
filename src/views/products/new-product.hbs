<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <h3>New Product</h3>
  </div>
  <div class="card-body">
    <form action="/products/new-product" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Write a title:</label>
        <input type="text" name="title" id="title" placeholder="Title" />
      </div>
      <div class="form-group">
        <label for="description">Write your description:</label>
        <textarea
          name="description"
          id="description"
          placeholder="Description"
          id=""
          cols="30"
          rows="10"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="category">Select a category:</label>
        <select name="category" id="category" class="form-control">
          <option value="Cascos">Cascos</option>
          <option value="Guantes">Guantes</option>
          <option value="Maletas">Maletas</option>
          <option value="Visores">Visores</option>
          <option value="Mascaras">Mascaras</option>
          <option value="Caucho">Caucho</option>
          <option value="Bolsos">Bolsos</option>
          <option value="Candados">Candados</option>
        </select>
      </div>
      <div class="form-group">
        <label for="price">Put a price:</label>
        <input type="text" name="price" id="price" placeholder="Price" />
      </div>
      <div class="form-group">
        <label for="image">Choose an image:</label>
        <input type="file" name="image" id="image" accept="image/*" />
      </div>
      <button class="btn btn-success btn-block">Add</button>
    </form>
  </div>
</div>
