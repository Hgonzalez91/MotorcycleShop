<div class="row justify-content-between align-items-center mb-4">
    <div class="col-md-auto">
        <h1>{{category}}</h1>
    </div>
    <div class="col-md-auto">
        <a href="/cart" class="btn  btn-lg">
            <i class="fa-solid fa-cart-shopping bi bi-cart3 fa-2x"></i>
        </a>
    </div>
</div>
<div class="container">
    <div class="row">
        {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <img src="/uploads/{{image}}" class="card-img-top" alt="Product Image">
                        <h4 class="card-title">{{title}}</h4>
                        <p class="card-text">{{description}}</p>
                        <p class="card-text">Price: {{price}}$</p>
                        <form action="/products/{{_id}}" method="GET">
                            <button type="submit" class="btn btn-info mt-auto">View</button>
                        </form>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
