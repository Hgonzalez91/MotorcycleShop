<div class="row justify-content-between align-items-center mb-4">
    <div class="col-md-auto">
        <h1>
            <img src="/images/logo.png" alt="Logo" style="height: 100px;">
            MotoTrend
        </h1>
    </div>
    <div class="col-md-auto">
        <a href="/cart" class="btn  btn-lg">
            <i class="fa-solid fa-cart-shopping bi bi-cart3 fa-2x"></i>
        </a>
    </div>
</div>
<!-- Banner -->
<div class="container-fluid banner-bg text-white py-4 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Bienvenido a nuestra tienda virtual!</h2>
                <p>Descubre nuestros ultimos productos.</p>
                <a href="#productsSection" class="btn btn-light btn-lg">Comprar ahora</a>
            </div>
        </div>
    </div>
</div>
<div class="container" id="productsSection" style="scroll-margin: 40px;">
    <div class="row">
        {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <img src="/uploads/{{image}}" class="card-img-top" alt="Product Image">
                        <h4 class="card-title">{{title}}</h4>
                        <p class="card-text">{{description}}</p>
                        <p class="card-text">Price: {{price}}$</p>
                        <form action="/products/{{_id}}" method="GET">
                            <button type="submit" class="btn btn-info mt-auto">View</button>
                        </form>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
